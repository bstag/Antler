---
import { getCollection, type CollectionEntry } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import ConditionalRoute from '../../components/ConditionalRoute.astro';

const allProjects: CollectionEntry<'projects'>[] = await getCollection('projects');
const sortedProjects = allProjects.sort((a, b) => 
  new Date(b.data.createdAt || '2024-01-01').getTime() - new Date(a.data.createdAt || '2024-01-01').getTime()
);

// Get all unique technologies
const allTechnologies: string[] = [...new Set(allProjects.flatMap(project => project.data.technologies))];

const title = 'Projects';
const description = 'Explore my portfolio of web development projects and technical achievements.';
---

<ConditionalRoute contentTypeId="projects">
  <BaseLayout title={title} description={description}>
    <Header />
    <main class="min-h-screen bg-gradient-to-br from-slate-50 to-blue-50 dark:from-slate-900 dark:to-slate-800">
    <div class="container mx-auto px-4 py-16">
      <!-- Header -->
      <div class="text-center mb-12">
        <h1 class="text-4xl md:text-5xl font-bold text-slate-900 dark:text-white mb-4">
          Projects
        </h1>
        <p class="text-xl text-slate-600 dark:text-slate-300 max-w-2xl mx-auto">
          A showcase of my technical projects, from web applications to open-source contributions
        </p>
      </div>

      <!-- Technology Filter -->
      <div class="mb-8">
        <div class="flex flex-wrap justify-center gap-2">
          <button 
            class="tech-filter active px-4 py-2 rounded-full text-sm font-medium transition-all duration-200 bg-blue-600 text-white hover:bg-blue-700"
            data-tech="all"
          >
            All Projects
          </button>
          {allTechnologies.map(tech => (
            <button 
              class="tech-filter px-4 py-2 rounded-full text-sm font-medium transition-all duration-200 bg-white dark:bg-slate-800 text-slate-700 dark:text-slate-300 hover:bg-blue-50 dark:hover:bg-slate-700 border border-slate-200 dark:border-slate-700"
              data-tech={tech}
            >
              {tech}
            </button>
          ))}
        </div>
      </div>

      <!-- Projects Grid -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8" id="projects-grid">
        {sortedProjects.map(project => (
          <article 
            class="project-card bg-white dark:bg-slate-800 rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 overflow-hidden group"
            data-technologies={project.data.technologies.join(',')}
          >
            <div class="aspect-video bg-gradient-to-br from-purple-400 to-blue-500 relative overflow-hidden">
              {project.data.projectImage ? (
                <img 
                  src={project.data.projectImage} 
                  alt={project.data.projectName}
                  class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                />
              ) : (
                <div class="w-full h-full flex items-center justify-center">
                  <svg class="w-16 h-16 text-white/80" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"></path>
                  </svg>
                </div>
              )}
              
              {project.data.featured && (
                <div class="absolute top-4 right-4">
                  <span class="bg-yellow-400 text-yellow-900 px-2 py-1 rounded-full text-xs font-bold">
                    Featured
                  </span>
                </div>
              )}
            </div>
            
            <div class="p-6">
              <div class="flex flex-wrap gap-2 mb-3">
                {project.data.technologies.slice(0, 3).map(tech => (
                  <span class="px-2 py-1 text-xs font-medium bg-purple-100 dark:bg-purple-900 text-purple-800 dark:text-purple-200 rounded-full">
                    {tech}
                  </span>
                ))}
                {project.data.technologies.length > 3 && (
                  <span class="px-2 py-1 text-xs font-medium bg-slate-100 dark:bg-slate-700 text-slate-600 dark:text-slate-300 rounded-full">
                    +{project.data.technologies.length - 3} more
                  </span>
                )}
              </div>
              
              <h2 class="text-xl font-bold text-slate-900 dark:text-white mb-2 group-hover:text-purple-600 dark:group-hover:text-purple-400 transition-colors">
                <a href={`/projects/${project.slug}`} class="hover:underline">
                  {project.data.projectName}
                </a>
              </h2>
              
              <p class="text-slate-600 dark:text-slate-300 mb-4 line-clamp-3">
                {project.data.description}
              </p>
              
              <div class="flex items-center justify-between">
                <div class="flex items-center gap-3">
                  {project.data.githubLink && (
                    <a 
                      href={project.data.githubLink}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="text-slate-500 hover:text-slate-700 dark:text-slate-400 dark:hover:text-slate-200 transition-colors"
                      title="View on GitHub"
                    >
                      <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                      </svg>
                    </a>
                  )}
                  
                  {project.data.liveUrl && (
                    <a 
                      href={project.data.liveUrl}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="text-slate-500 hover:text-slate-700 dark:text-slate-400 dark:hover:text-slate-200 transition-colors"
                      title="View Live Site"
                    >
                      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                      </svg>
                    </a>
                  )}
                </div>
                
                <a 
                  href={`/projects/${project.slug}`}
                  class="inline-flex items-center gap-1 text-purple-600 dark:text-purple-400 hover:text-purple-700 dark:hover:text-purple-300 font-medium text-sm transition-colors"
                >
                  Learn More
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                  </svg>
                </a>
              </div>
            </div>
          </article>
        ))}
      </div>

      <!-- No projects message (hidden by default) -->
      <div id="no-projects" class="hidden text-center py-12">
        <div class="text-slate-400 dark:text-slate-500">
          <svg class="w-16 h-16 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
          </svg>
          <p class="text-xl font-medium">No projects found</p>
          <p class="text-sm mt-2">Try selecting a different technology</p>
        </div>
      </div>
    </div>
    </main>
  </BaseLayout>
</ConditionalRoute>

<script>
  // Technology filtering functionality
  document.addEventListener('DOMContentLoaded', () => {
    const techFilters = document.querySelectorAll('.tech-filter') as NodeListOf<HTMLElement>;
    const projectCards = document.querySelectorAll('.project-card') as NodeListOf<HTMLElement>;
    const noProjectsMessage = document.getElementById('no-projects') as HTMLElement | null;

    techFilters.forEach(filter => {
      filter.addEventListener('click', () => {
        const selectedTech = filter.dataset.tech;
        
        // Update active state
        techFilters.forEach(f => f.classList.remove('active', 'bg-blue-600', 'text-white'));
        techFilters.forEach(f => f.classList.add('bg-white', 'dark:bg-slate-800', 'text-slate-700', 'dark:text-slate-300'));
        
        filter.classList.add('active', 'bg-blue-600', 'text-white');
        filter.classList.remove('bg-white', 'dark:bg-slate-800', 'text-slate-700', 'dark:text-slate-300');
        
        // Filter projects
        let visibleCount = 0;
        projectCards.forEach(card => {
          const cardTechnologies = card.dataset.technologies?.split(',') || [];
          const shouldShow = selectedTech === 'all' || cardTechnologies.includes(selectedTech || '');
          
          if (shouldShow) {
            card.style.display = 'block';
            visibleCount++;
          } else {
            card.style.display = 'none';
          }
        });
        
        // Show/hide no projects message
        if (visibleCount === 0) {
          noProjectsMessage?.classList.remove('hidden');
        } else {
          noProjectsMessage?.classList.add('hidden');
        }
      });
    });
  });
</script>

<style>
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>