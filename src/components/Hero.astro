---
import { ArrowRight, Code, Zap, Globe } from 'lucide-react';
---

<section class="relative overflow-hidden bg-gradient-to-br from-primary-50 via-white to-primary-100 dark:from-gray-900 dark:via-gray-900 dark:to-primary-900/20">
  <!-- Background Pattern -->
  <div class="absolute inset-0 bg-grid-pattern opacity-5"></div>
  
  <div class="relative max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-20 lg:py-32">
    <div class="text-center">
      <!-- Badge -->
      <div class="inline-flex items-center px-4 py-2 rounded-full bg-primary-100 dark:bg-primary-900/30 text-primary-700 dark:text-primary-300 text-sm font-medium mb-8 animate-fade-in">
        <Zap className="w-4 h-4 mr-2" />
        Modern Static Site Generation
      </div>

      <!-- Main Heading -->
      <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold text-gray-900 dark:text-white mb-6 animate-slide-up">
        Build Fast, 
        <span class="text-transparent bg-clip-text bg-gradient-to-r from-primary-600 to-primary-800 dark:from-primary-400 dark:to-primary-600">
          Beautiful
        </span> 
        Websites
      </h1>

      <!-- Subtitle -->
      <p class="text-xl text-gray-600 dark:text-gray-300 mb-8 max-w-3xl mx-auto leading-relaxed animate-slide-up animation-delay-200">
        Transform your Markdown content into stunning, performant websites with Antler. 
        Built with Astro, React, and TypeScript for the ultimate developer experience.
      </p>

      <!-- CTA Buttons -->
      <div class="flex flex-col sm:flex-row gap-4 justify-center items-center mb-12 animate-slide-up animation-delay-400">
        <a 
          href="/docs/installation" 
          class="btn-primary group inline-flex items-center px-8 py-4 text-lg font-semibold"
        >
          Get Started
          <ArrowRight className="ml-2 w-5 h-5 group-hover:translate-x-1 transition-transform" />
        </a>
        <a 
          href="/projects" 
          class="btn-secondary inline-flex items-center px-8 py-4 text-lg font-semibold"
        >
          View Projects
        </a>
      </div>

      <!-- Feature Icons -->
      <div class="grid grid-cols-1 sm:grid-cols-3 gap-8 max-w-2xl mx-auto animate-fade-in animation-delay-600">
        <div class="flex flex-col items-center text-center">
          <div class="w-12 h-12 bg-primary-100 dark:bg-primary-900/30 rounded-lg flex items-center justify-center mb-3">
            <Code className="w-6 h-6 text-primary-600 dark:text-primary-400" />
          </div>
          <h3 class="font-semibold text-gray-900 dark:text-white mb-1">Developer First</h3>
          <p class="text-sm text-gray-600 dark:text-gray-400">Built with modern tools and best practices</p>
        </div>
        
        <div class="flex flex-col items-center text-center">
          <div class="w-12 h-12 bg-primary-100 dark:bg-primary-900/30 rounded-lg flex items-center justify-center mb-3">
            <Zap className="w-6 h-6 text-primary-600 dark:text-primary-400" />
          </div>
          <h3 class="font-semibold text-gray-900 dark:text-white mb-1">Lightning Fast</h3>
          <p class="text-sm text-gray-600 dark:text-gray-400">Optimized for performance and SEO</p>
        </div>
        
        <div class="flex flex-col items-center text-center">
          <div class="w-12 h-12 bg-primary-100 dark:bg-primary-900/30 rounded-lg flex items-center justify-center mb-3">
            <Globe className="w-6 h-6 text-primary-600 dark:text-primary-400" />
          </div>
          <h3 class="font-semibold text-gray-900 dark:text-white mb-1">Deploy Anywhere</h3>
          <p class="text-sm text-gray-600 dark:text-gray-400">Static files work on any hosting platform</p>
        </div>
      </div>
    </div>
  </div>

  <!-- Decorative Elements -->
  <div class="absolute top-0 left-0 w-72 h-72 bg-primary-300 rounded-full mix-blend-multiply filter blur-xl opacity-20 animate-blob"></div>
  <div class="absolute top-0 right-0 w-72 h-72 bg-primary-400 rounded-full mix-blend-multiply filter blur-xl opacity-20 animate-blob animation-delay-2000"></div>
  <div class="absolute -bottom-8 left-20 w-72 h-72 bg-primary-500 rounded-full mix-blend-multiply filter blur-xl opacity-20 animate-blob animation-delay-4000"></div>
</section>

<style>
  .bg-grid-pattern {
    background-image: radial-gradient(circle, #e5e7eb 1px, transparent 1px);
    background-size: 20px 20px;
  }
  
  .dark .bg-grid-pattern {
    background-image: radial-gradient(circle, #374151 1px, transparent 1px);
  }
  
  @keyframes blob {
    0% {
      transform: translate(0px, 0px) scale(1);
    }
    33% {
      transform: translate(30px, -50px) scale(1.1);
    }
    66% {
      transform: translate(-20px, 20px) scale(0.9);
    }
    100% {
      transform: translate(0px, 0px) scale(1);
    }
  }
  
  .animate-blob {
    animation: blob 7s infinite;
  }
  
  .animation-delay-2000 {
    animation-delay: 2s;
  }
  
  .animation-delay-4000 {
    animation-delay: 4s;
  }
  
  .animation-delay-200 {
    animation-delay: 0.2s;
  }
  
  .animation-delay-400 {
    animation-delay: 0.4s;
  }
  
  .animation-delay-600 {
    animation-delay: 0.6s;
  }
</style>